{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "useDefineForClassFields": true,
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  },
  "vueCompilerOptions": {
    "target": 2.6,
  },
  "include": [
    "env.d.ts",
    "vite.config.*",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.test.ts",
    ".storybook"
  ],
  "references": [{ "path": "./tsconfig.storybook.json" }]
}
