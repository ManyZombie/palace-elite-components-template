{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true
  },
  "include": [
    "env.d.ts",
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    ".storybook/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
